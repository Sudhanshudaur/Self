/**************************************/

#include<iostream>
using namespace std;
int main()
{

	int n; cout<<"Enter n : "; cin>>n;
	for(int i=1; i<=n; i++)
	{
	   for(int j=1; j<=i; j++)	
		{
			char ch = 'A' + i + j - 2;
			cout<<ch;
		}
		  cout<<endl;
	}

        cout<<"\n\n";
/**************************************/	
	
	
	for(int i=1; i<=n; i++)
	{   
	   char ch = 'A'+n-i;
	   for(int j=1; j<=i; j++)	
		{
		     cout<<ch<<" ";
		   	 ch++;
		}
		   
		   cout<<endl;
	}

        cout<<"\n\n";
/******************************************/

	for(int i=1; i<=n; i++)
	{   
	   for(int j=1; j<=n-i+1; j++)	
		{
		     cout<<"*";
		}
	       cout<<endl;
	}
  
        cout<<"\n\n";
/*****************************************/

       int num = 1;
	for(int i=1; i<=n; i++)
	{   
	   for(int j=1; j<=n-i; j++)
	   {
	   	    cout<<" ";
	   }
	     	
	   	for(int j=1; j<=i; j++)	
		{
			cout<<num;
			num++;
		}		
		   cout<<endl;
    }

        cout<<"\n\n";
/*****************************************/

       for(int i=1; i<=n; i++)
       {
       	 for(int j=1; j<=n-i; j++)
       	 {
       	 	cout<<" ";
		 }
       	 for(int j=1; j<=i; j++)
       	 {
       	 	cout<<j;
		 }
       	 for(int j=1; j<=i-1; j++)
       	 {
       	 	cout<<i-j;
		 }
       	    cout<<endl;
	   }

        cout<<"\n\n";
/*****************************************/


     // Dabangg
     
     
     
     
      for(int i=1; i<=n; i++)
      {
      	for(int j=1; j<=n-i+1; j++)
      	{
      		cout<<j;
		}
		for(int j=1; j<=i-1; j++)
		{
			cout<<"*";
		}
		for(int j=1; j<=i-1; j++)
		{
			cout<<"*";
		}
		for(int j=1; j<=n-i+1; j++)
		{
			cout<<n-i-j+2;
		}
		 cout<<endl;
      }
      
        cout<<"\n\n";      
/*****************************************/	  
	  
	  // Diamond
	  
	 
	  for(int i=1; i<=n; i++)
	  {
	  	for(int j=1; j<=n-i; j++)
	  	{
	  		cout<<" ";
		}
		for(int j=1; j<=i; j++)
		{
			cout<<"*";
		}
		for(int j=1; j<=i-1; j++)
	  	{
	  		cout<<"*";
	  	}
	  	  cout<<endl;
      } 
      for(int i=1; i<=n; i++)
      {
	  	for(int j=1; j<=i; j++)
	  	{
	  		cout<<" ";
		}
		for(int j=1; j<=n-i; j++)
		{
			cout<<"*";
		}
		for(int j=1; j<=n-i-1; j++)
		{
			cout<<"*";
		}
		cout<<endl;
	  }

}

/*************************************/
